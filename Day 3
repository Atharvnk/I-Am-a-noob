#include<stdio.h>
void main()
{
    float a, b, c;
    printf("plz enter a");
    scanf("%f", &a);
    printf("plz enter b");
    scanf("%f", &b);
    c= a+b;
    printf("the sum of %f and %f is %f", a, b, c);
}  



#include<stdio.h>
void main()
{
    int a, b, c;
    printf("plz enter a");
    scanf("%d", &a);
    printf("plz enter b");
    scanf("%d", &b);
    c= a+b;
    printf("the sum of %d and %d is %d", a, b, c);
}
